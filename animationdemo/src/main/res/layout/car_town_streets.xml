<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:scrollbars="none">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/car_town_buildings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/blue">
                <TextView
                    android:id="@+id/building_a"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/yellow"
                    android:layout_alignParentBottom="true"
                    android:text="A"/>
                <TextView
                    android:id="@+id/building_b"
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/purple"
                    android:layout_toRightOf="@+id/building_a"
                    android:layout_alignParentBottom="true"
                    android:text="B"/>
                <TextView
                    android:id="@+id/building_c"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/orange"
                    android:layout_toRightOf="@+id/building_b"
                    android:layout_alignParentBottom="true"
                    android:text="C"/>
                <TextView
                    android:id="@+id/building_d"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey"
                    android:layout_toRightOf="@+id/building_c"
                    android:layout_alignParentBottom="true"
                    android:text="D"/>
                <TextView
                    android:id="@+id/building_e"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/yellow"
                    android:layout_toRightOf="@+id/building_d"
                    android:layout_alignParentBottom="true"
                    android:text="E"/>
                <TextView
                    android:id="@+id/building_f"
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/purple"
                    android:layout_toRightOf="@+id/building_e"
                    android:layout_alignParentBottom="true"
                    android:text="F"/>
                <TextView
                    android:id="@+id/building_g"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/orange"
                    android:layout_toRightOf="@+id/building_f"
                    android:layout_alignParentBottom="true"
                    android:text="G"/>
                <TextView
                    android:id="@+id/building_h"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey"
                    android:layout_toRightOf="@+id/building_g"
                    android:layout_alignParentBottom="true"
                    android:text="H"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_town_streets"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/grey_heavy">
                <TextView
                    android:id="@+id/car_town_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:layout_alignParentBottom="true"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="CAR"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>