<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_news_image"
        android:layout_width="@dimen/news_item_image_width"
        android:layout_height="@dimen/news_item_image_height"
        android:background="@android:color/transparent"
        android:src="@drawable/demo_news_image"
        android:scaleType="centerInside"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/item_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/news_title"
            android:textSize="@dimen/news_title"
            android:singleLine="true"
            android:text="新闻标题"/>

        <TextView
            android:id="@+id/item_news_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/news_description"
            android:textSize="@dimen/news_description"
            android:text="新闻内容简介"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

</LinearLayout>