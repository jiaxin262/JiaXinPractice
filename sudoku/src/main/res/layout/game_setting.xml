<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/titile_bgcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/title_left_margin"
            android:src="@mipmap/title_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/game_setting"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textsize"
            android:layout_marginLeft="@dimen/setting_text_left_margin"/>
    </LinearLayout>

</LinearLayout>